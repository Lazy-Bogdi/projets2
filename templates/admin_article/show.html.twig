{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<h1>Article</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ article.content }}</td>
        </tr>
        <tr>
            <th>Video</th>
            <td>
                <video controls width="250">
                    <source src="{{ asset('articles/contents/') }}{{article.fileName}}" type="video/mp4">
                    <a href="{{ asset('articles/contents/') }}{{article.fileName}}">MP4</a>
                </video>

            </td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_admin_article_index') }}">back to list</a>

<a href="{{ path('app_admin_article_edit', {'id': article.id}) }}">edit</a>

{{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}