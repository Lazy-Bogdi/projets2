{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/categoryInd.css') }}">
{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <div class="category-grid">
        {% for category in categories %}
            <div class="category">
                <h4>{{ category.name }}</h4>
                <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
            </div>
        {% else %}
            <div class="category">
                No records found.
            </div>
        {% endfor %}
    </div>
{% endblock %}
