{% extends 'base.html.twig' %}

{% block title %}Hello UserHistoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="history-grid">
    {% for history in userHistory %}
    <div class="category">
        <h4>{{ history.article.title }}</h4>
        <h4>{{ history.article.category }}</h4>
        {# <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a> #}
    </div>
    {% else %}
    <div class="history">
        No records found.
    </div>
    {% endfor %}
</div>
{% endblock %}