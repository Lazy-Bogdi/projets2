{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/requestResetPwd.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <p class="infoForEmail">
        If an account matching your email exists, then an email was just sent that contains a link that you can use to
        reset your password.
        This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData,
        'ResetPasswordBundle') }}.
    </p>
    <p class="infoForEmail">If you don't receive an email please check your spam folder or <a
            href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
</div>
{% endblock %}