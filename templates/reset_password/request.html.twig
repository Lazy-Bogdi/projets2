{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/requestResetPwd.css') }}">
{% endblock %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="container">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Reset your password</h1>

    <form action="" method="post" class="password-reset-form">
        <div class="form-group">
            {{ form_row(requestForm.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="instructions">
            <small>
                Enter your email address and we will send you a link to reset your password.
            </small>
        </div>
         {# Adding CSRF Token #}
         {{ form_row(requestForm._token, { 'attr': {'class': 'hidden'} }) }}
        <div class="submit-btn">
            <button class="btn btn-primary">Send password reset email</button>
        </div>
    </form>
</div>
{% endblock %}
