{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/adminCrudView.css') }}">
{% endblock %}
{% block body %}
<div class="crudContainer">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                {# <th>Password</th> #}
                <th>Lastname</th>
                <th>Firstname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td> #}
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>
                    {# <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="show-button">show</a> #}
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="edit-button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_new') }}" class="create-button">Create new</a>
    <a href="{{ path('app_admin_all') }}" class="admin-menu-button">ADMIN MENU</a>
</div>
{% endblock %}
